{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile LaTeX",
      "type": "shell",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-interaction=errorstopmode",
        "-file-line-error",
        "main.tex",
        "&&",
        "rm",
        "-f",
        "main.fdb_latexmk",
        "main.fls",
        "main.log",
        "main.out"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$latex-warnings",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
